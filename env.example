# ===========================================
# APPLICATION
# ===========================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="SaaS App"

# ===========================================
# DATABASE
# ===========================================
POSTGRES_URL=postgresql://dev_user:dev_password@localhost:5432/postgres_dev

# ===========================================
# REDIS (for caching and rate limiting)
# ===========================================
# Leave empty to use in-memory fallback
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ===========================================
# AUTHENTICATION (Better Auth)
# ===========================================
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-auth-secret-here

# Google OAuth (optional)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===========================================
# AI INTEGRATION (OpenRouter)
# ===========================================
# Get your API key from: https://openrouter.ai/settings/keys
# View available models at: https://openrouter.ai/models
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openai/gpt-5-mini

# Optional - for vector search
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# ===========================================
# PAYMENTS (Stripe)
# ===========================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_
STRIPE_WEBHOOK_SECRET=whsec_
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_

# Stripe Price IDs (create products in Stripe dashboard)
STRIPE_PRICE_ID_PLUS_MONTHLY=price_
STRIPE_PRICE_ID_PLUS_YEARLY=price_
STRIPE_PRICE_ID_PRO_MONTHLY=price_
STRIPE_PRICE_ID_PRO_YEARLY=price_

# ===========================================
# EMAIL
# ===========================================
# Resend (production) - Get from: https://resend.com/api-keys
RESEND_API_KEY=re_

# Email from address
EMAIL_FROM=noreply@yourdomain.com

# SMTP Configuration (development fallback)
# For local dev, use Mailpit: docker run -p 1025:1025 -p 8025:8025 axllent/mailpit
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# ===========================================
# ANALYTICS (PostHog)
# ===========================================
# Get from: https://app.posthog.com/project/settings
NEXT_PUBLIC_POSTHOG_KEY=phc_
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# ===========================================
# ERROR MONITORING (Sentry)
# ===========================================
# Get from: https://sentry.io/settings/projects/
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# Set to "true" to enable Sentry in development (for testing only)
NEXT_PUBLIC_SENTRY_DEBUG=false

# Release tracking
NEXT_PUBLIC_APP_VERSION=

# Optional: Override default sample rates
# NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1
# NEXT_PUBLIC_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1

# ===========================================
# CRON JOBS
# ===========================================
# Generate with: openssl rand -base64 32
# Used to authenticate scheduled jobs (dunning emails, account cleanup)
CRON_SECRET=

# ===========================================
# FILE STORAGE (optional)
# ===========================================
# Leave empty for local storage (public/uploads/)
# Set for Vercel Blob in production
BLOB_READ_WRITE_TOKEN=

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=debug
